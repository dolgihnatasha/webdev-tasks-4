body
html {
    height: 100%;
    width: 100%;
    overflow: hidden;
}
main {
    @extends body
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    perspective: 800px;
}
.wrapper {
    height: 200px;
    width: 250px;
    min-width: 250px;
    display: block;
    perspective: 200px;
    box-shadow: 0 10px 25px -5px rgba(50, 50, 50, .75);
    transition-property: z-index, transform;
    transition-duration: .3s, 1.5s;
    label {
        @extend .wrapper
        display: block;
    }
}
input {
    display: none;
}
for i in range(0, length(pics) - 1)
    label[for={'pic' + (i + 1)}] {
        p = pics[i];
        background url(p) 50% 50% no-repeat;
        background-size cover;
    }

for i in range(0, length(pics) - 1)
    for k in range(0, length(pics) - 1)
        s = '"' + (k + 1) + '"'
        #pic{i + 1} {
            &:checked {
                ~ main {
                    .wrapper[data-picture={s}] {
                        d = k - i
                        tx = 100% * ((length(pics) - 1) / 2 - i)
                        z = -10 * abs(d)
                        if abs(d) >= 10 {
                            if d > 0 {
                                rk = 10 + 1 / d
                            } else {
                                rk = -10 + 1 / d
                            }
                        } else {
                            rk = d
                        }
                        if d < 0 {
                            r = 70deg + (5 * (rk + 1))
                            t3x = -30% - (60 * d)
                            t3z = 40px * d
                        } else {
                            r = -70deg + (5 * (rk - 1))
                            t3x = 30% - (60 * d)
                            t3z = -40px * d
                        }
                        if d == 0 {
                            transform translateX(tx) scale(1.1);
                        } else {
                            transform translateX(tx) translate3D(t3x, 0, t3z) rotateY(r);
                            z-index z
                        }
                    }
                }
            }
        }
